<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mbc.mapper.ReservationMapper">
	<insert id="reservation" parameterType="ReservationDTO">
		INSERT INTO tbl_reservation (rno, rid, date, time, contents)
		VALUES (#{rno}, #{rid}, #{date}, #{time}, #{contents})
	</insert>

	<select id="reservationInfo" resultType="ReservationDTO"> 
		SELECT * FROM tbl_reservation WHERE rid = #{rid}
	</select>
	
	<select id="reservationTimeCheck" resultType="ReservationDTO">
		SELECT * FROM tbl_reservation WHERE date = #{date} AND time = ${time}
	</select>
	<!-- <select id="reservationcheck" resultType="ReservationDTO">
		SELECT * FROM tbl_reservation WHERE date = #{date} AND time = ${time}
	</select> -->
	
</mapper>